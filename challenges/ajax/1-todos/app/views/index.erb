<div id="todo">
  <div class="toolbox">
    <form action="/add_todo" method="post">
      <input type="text" class="todo" name="todo_content" value="Put your todo item here!"/><br>
      
      <input type="submit" value="Add Todo"/>
      <!-- <button class="add" type="submit">Add Todo</button> -->
    </form>
  </div>

  <div class="todo_list">

  </div>

  <div id="todo_template" style="display: none;">
    <div class="todo">
      <h2>Todo Name</h2>
      <ul>
        <li><a href="#" class="delete">Delete</a></li>
        <li><a href="#" class="complete">Complete</a></li>
      </ul>
    </div>
  </div>
  <br>
  <div>
      <table border="1">
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Completed</th>
          <th>Acciones</th>
        </tr>
          <% @todos.each do |todo| %>
        <tr>
          <td><%= todo.id %></td>
          <td><%= todo.todo_content %></td>
          <td><%= todo.completed %></td>
          <td>
            <a href="/todo/<%= todo.id %>/completed">Complete</a> ||
            <a href="/todo/<%= todo.id %>/delete">Eliminar</a>
          </td>
          <% end %>
        </tr> 
      </table> 
  </div>
</div>
